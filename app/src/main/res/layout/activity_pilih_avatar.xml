<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_select_karakter_background"
        android:text="Mulai"
        android:textColor="#ffffff"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="517dp" />

    <TextView
        android:id="@+id/tv_nama_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Female"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="486dp" />

    <TextView
        android:id="@+id/textView2_lala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Pilih Karaktermu"
        android:textColor="#1a6e7c"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="183dp" />

    <ImageButton
        android:id="@+id/btn_next_avatar"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/textView2"
        android:onClick="changeAvatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
        tools:background="@drawable/btn_next_karakter_background" />

    <ImageButton
        android:id="@+id/btn_prev_avatar"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_next_avatar"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:background="@drawable/btn_next_karakter_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="249dp"
        android:layout_height="540dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2_lala"
        app:srcCompat="@drawable/cewek"
        tools:layout_editor_absoluteX="99dp" />
</android.support.constraint.ConstraintLayout>
</layout>