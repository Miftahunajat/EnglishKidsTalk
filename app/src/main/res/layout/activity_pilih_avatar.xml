<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/cewek" />

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@drawable/btn_select_karakter_background"
        android:text="Mulai"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_nama_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        android:text="Female"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2_lala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Pilih Karaktermu"
        android:textColor="#1a6e7c"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/btn_next_avatar"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="211dp"
        android:layout_toEndOf="@+id/textView2"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
        tools:background="@drawable/btn_next_karakter_background" />

    <ImageButton
        android:id="@+id/btn_prev_avatar"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_next_avatar"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:background="@drawable/btn_next_karakter_background"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />
</RelativeLayout>
</layout>